@model GraduaitionProjectITI.ViewModel.Brand_View_Models.EditBrandViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <h1>Edit Brand</h1>
    <br />

    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div><br /><br />

        <div class="input-group mb-3">
            <img src="~/BrandImages/@Model.Image" class="rounded-circle" height="40" width="40" />

            <input asp-for="BrandImage" value="@Model.Image" class="form-control" id="inputGroupFile02">
            <label class="input-group-text" for="inputGroupFile02">Brand Image</label>

            <span asp-validation-for="BrandImage" class="text-danger"></span>
        </div><br />

        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-primary" />
            <a class="btn btn-outline-secondary" asp-action="Index" > Cancel </a>
        </div>
    </form>
</div>
<div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

