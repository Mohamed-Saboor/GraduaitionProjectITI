@model GraduaitionProjectITI.Models.Entity.Product
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<center>
    <div class="align-content-center">
        <div class="container">
            <div class="card" style="width: 30rem;">
                <img src="~/1.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <form asp-action="ConfirmDelete">
                        <input type="hidden" name="Id" value="@Model.Id"><hr>
                        <h2><b> Are you want to delete this Product @Model.Name </b></h2>

                        <div class="d-inline-flex gap-1">
                            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
                            <a class="btn btn-primary btn-lg" asp-action="Index" asp-controller="Product"> Cancel </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</center>
@section Scripts {
   @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
