@model IEnumerable<GraduaitionProjectITI.Models.Entity.Product>

<table class="table table table-hover table-striped">
    <thead class="table-primary">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Manufacture)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ModelNumber)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ImgPath)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModelNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @*asp-append-version="true"*@
                    <img src="~/ProductImages/@item.ImgPath" class="rounded-circle" height="40" width="40" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>

                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pen"></i>
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash3-fill"></i>
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>